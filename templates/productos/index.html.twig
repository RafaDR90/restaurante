{% extends 'base.html.twig' %}

{% block title %}Productos {% endblock %}

{% block body %}
    <h1 class="text-center">{{ nombre }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Peso</th>
            <th>Stock</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>{{ producto.peso }}</td>
                <td>{{ producto.stock }}</td>
                <td>{{ producto.precio }}</td>
                <td>
                    <a class="text-decoration-none text-dark fw-bold" href="{{ path('app_productos_edit', {'id': producto.id, 'catId': catId}) }}">Editar</a>
                    <a class="text-decoration-none text-dark fw-bold" href="{{ path('app_productos_addCart',{'id':producto.id,'catId': catId}) }}">Añadir al
                        carrito</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   <div class="crearCategoria d-flex justify-content-center">
        <a class="btn-primary p-2 rounded-2 text-decoration-none text-dark fw-bold fs-5" href="{{ path('app_productos_new',{'catId': catId}) }}">Crear nuevo producto</a>
   </div>

    <style>

        .crearCategoria a:hover {
            transform: scale(1.2);
            box-shadow: 0 0 6px black;
        }
    </style>
{% endblock %}
